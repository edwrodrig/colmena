body
{
	background-color: black ;
	color: #00ff00;
	width :800px ;
	font: 12px arial;
	margin: auto; 
}

div.title
{
	width:100% ;
	height: 120px;
	background-image: url(colmenalogo.jpg);
	background-repeat: no-repeat;
	background-position: center center;
}

table.main
{
	width:100% ;
}



table.main td.tasks
{
	width:50% ;
	border-style: solid;
	border-color: #003300 ;
	border-width: 1px ;
	margin: 1px ;
	padding:0px ;
}

table.main td.history
{
	width:50% ;
	border-style: solid;
	border-width: 1px ;
	border-color: #003300 ; 
	margin: 1px ;
	padding:0px ;
}

div.infologo
{
	background-image: url(udeclogo.jpg);
	background-repeat: no-repeat;
	background-position: center center;
	height: 49px;
	width: 100%;
}

div.tasktitle
{
	background-color: #008800 ;
	background-repeat: no-repeat ;
	background-position: top right;
	font: bold 16px arial;
	color: #ffffff;
	height :40px;
}

div.historytitle
{
	background-color: #008800 ;
	background-repeat: no-repeat ;
	background-position: top right;
	font: bold 16px arial;
	color: #ffffff;
	height :40px;
}

div.task
{
	background-color: #0fff0f ;
}

div.info
{
	width: 100% ;
	text-align: center ;
	font: 9px arial;
}

ul
{
	background-color: #003300 ;
}
li
{
	background-color: #008800 ;
	color: #88ff00 ;
	font: bold 12px arial;
}

table.apps
{
	width: 100% ;
	font: 12px verdana;
}

table .apps th
{
	background-color: #008800 ;
	text-align: left ;
	color: #ffff00;
}

table.apps td
{
	background-color: #003300 ;
	text-align: left ;
}

table .apps td.number
{
	text-align: right ;
}



